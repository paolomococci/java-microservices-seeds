<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" 
            prefHeight="400.0" 
            prefWidth="600.0" 
            styleClass="main-area-chart" 
            stylesheets="@../style/area-chart-view.css"
            xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="local.example.seed.controller.AreaChartViewController">
    <children>
        <VBox id="main-vertical-box" 
              maxHeight="-Infinity" 
              maxWidth="-Infinity" 
              minHeight="-Infinity" 
              minWidth="-Infinity" 
              prefHeight="400.0" 
              prefWidth="600.0">
            <children>
                <AreaChart fx:id="pseudoRandomAreaChart">
                    <xAxis>
                        <CategoryAxis side="BOTTOM" 
                                      fx:id="abscissa" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" 
                                    fx:id="ordinate" />
                    </yAxis>
                </AreaChart>
                <ButtonBar fx:id="buttonBar" 
                           prefHeight="40.0" 
                           prefWidth="200.0" 
                           styleClass="button-bar">
                    <buttons>
                        <Button fx:id="loadData" 
                                mnemonicParsing="false" 
                                styleClass="load-button"
                                onAction="#loadPseudoRandomData" 
                                text="load data" />
                    </buttons>
                </ButtonBar>
            </children>
        </VBox>
    </children>
</AnchorPane>
