<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="seedView" 
            xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../css/seed-view.css"
            fx:controller="local.example.seed.controller.SeedViewController">
    <children>
        <SplitPane dividerPositions="0.5" 
                   layoutX="150.0" 
                   layoutY="70.0" 
                   prefHeight="300.0" 
                   prefWidth="600.0" 
                   AnchorPane.bottomAnchor="0.0" 
                   AnchorPane.leftAnchor="0.0" 
                   AnchorPane.rightAnchor="0.0" 
                   AnchorPane.topAnchor="0.0">
            <items>
                <AnchorPane minHeight="0.0" 
                            minWidth="0.0" 
                            prefHeight="160.0" 
                            prefWidth="100.0">
                    <children>
                        <Label layoutX="100.0" 
                               layoutY="50.0" 
                               text="seed details" 
                               AnchorPane.leftAnchor="5.0" 
                               AnchorPane.topAnchor="5.0" />
                        <GridPane layoutX="40.0" 
                                  layoutY="100.0" 
                                  AnchorPane.leftAnchor="5.0" 
                                  AnchorPane.rightAnchor="5.0" 
                                  AnchorPane.topAnchor="30.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" 
                                                   minWidth="10.0" 
                                                   prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" 
                                                   minWidth="10.0" 
                                                   prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" 
                                                prefHeight="30.0" 
                                                vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" 
                                                prefHeight="30.0" 
                                                vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" 
                                                prefHeight="30.0" 
                                                vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" 
                                                prefHeight="30.0" 
                                                vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="id" />
                                <Label text="name" GridPane.rowIndex="1" />
                                <Label text="percentage" GridPane.rowIndex="2" />
                                <Label fx:id="idLabel" text="" 
                                       GridPane.columnIndex="1" />
                                <Label fx:id="nameLabel" text="" 
                                       GridPane.columnIndex="1" 
                                       GridPane.rowIndex="1" />
                                <Label fx:id="percentageLabel" text="" 
                                       GridPane.columnIndex="1" 
                                       GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                        <ButtonBar layoutX="50.0" 
                                   layoutY="250.0" 
                                   AnchorPane.bottomAnchor="10.0" 
                                   AnchorPane.rightAnchor="10.0">
                            <buttons>
                                <Button mnemonicParsing="false" 
                                        onAction="#createNewSeed"
                                        text="add" />
                                <Button mnemonicParsing="false" 
                                        onAction="#editSelectedSeed"
                                        text="edit" />
                                <Button mnemonicParsing="false" 
                                        onAction="#deleteSelectedSeed" 
                                        text="delete" />
                            </buttons>
                        </ButtonBar>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" 
                            minWidth="0.0" 
                            prefHeight="160.0" 
                            prefWidth="100.0">
                    <children>
                        <TableView fx:id="seedTableView" 
                                   layoutX="-10.0" 
                                   layoutY="45.0" 
                                   prefHeight="295.0" 
                                   prefWidth="175.0" 
                                   AnchorPane.bottomAnchor="0.0" 
                                   AnchorPane.leftAnchor="0.0" 
                                   AnchorPane.rightAnchor="0.0" 
                                   AnchorPane.topAnchor="0.0">
                            <columns>
                                <TableColumn fx:id="idColumn" 
                                             prefWidth="75.0" 
                                             text="id" />
                                <TableColumn fx:id="nameColumn" 
                                             prefWidth="75.0" 
                                             text="name" />
                                <TableColumn fx:id="percentageColumn" 
                                             prefWidth="75.0" 
                                             text="percentage" />
                            </columns>
                            <columnResizePolicy>
                                <!-- 
                                    Following is a line of problematic code in 
                                    Apache NetBeans 11, the IDE reports an error 
                                    that does not actually exist .
                                -->
                                <TableView 
                                    fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
